{% extends "template.twig" %}

{% block title %}Register | Nano Cooperative{% endblock %}

{% block head %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <link rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block body %}
    <div class="login">
        <div class="panel">
            <a class="nanolink" id="back" href="/"><i class="fas fa-chevron-circle-left"></i> Back</a>
            <h2>Request Membership</h2>
            <br>
            {% if error %}
                <div class="error">
                    <h6><i class="fas fa-times-circle"></i> {{ error }}</h6>
                </div>
            {% endif %}
            <small>Please review one of our current memberâ€™s pages for an example of content for the following fields. <a class="nanolink" href="/members/2" target="_blank" style="font-weight: bold">Steven Hughes</a></small>
            <br>
            <form class="needs-validation" action="/auth/register" method="post" novalidate>
                <div class="form-group">
                    <label for="firstname">First Name <i class="fas fa-asterisk red"></i></label>
                    <input name="firstname" id="firstname" type="text" class="form-control" value="{{ data.firstname }}" required>
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name <i class="fas fa-asterisk red"></i></label>
                    <input name="lastname" id="lastname" type="text" class="form-control" value="{{ data.lastname }}" required>
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="form-group">
                    <label for="username">Username <i class="fas fa-asterisk red"></i></label>
                    <input name="username" id="username" type="text" class="form-control" value="{{ data.username }}" required>
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Email <i class="fas fa-asterisk red"></i></label>
                    <input name="email" id="email" type="email" class="form-control" value="{{ data.email }}" required>
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="form-group">
                    <label for="website">Website</label>
                    <input name="website" id="website" type="url" class="form-control" value="{{ data.website }}">
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="form-group">
                    <label for="institution">Institution <i class="fas fa-asterisk red"></i></label>
                    <input name="institution" id="institution" type="text" class="form-control" value="{{ data.institution }}" required>
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="form-group">
                    <label for="expertise">Expertise <i class="fas fa-asterisk red"></i></label>
                    <input name="expertise" id="expertise" type="text" class="form-control" value="{{ data.expertise }}" required>
                    <small class="form-text text-muted">Please keep it short.</small>
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="form-group">
                    <label for="instrumentation">Institution's Instrumentation <i class="fas fa-asterisk red"></i></label>
                    <textarea name="instrumentation" id="instrumentation" class="form-control" required>{{ data.instrumentation }}</textarea>
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="form-group">
                    <label for="biography">Background & Research Interests <i class="fas fa-asterisk red"></i></label>
                    <textarea name="biography" id="biography" class="form-control" required>{{ data.biography }}</textarea>
                    <div class="invalid-feedback">
                        Please enter a value.
                    </div>
                </div>
                <div class="g-recaptcha" data-sitekey="6LdRoaUZAAAAACC6Tzktcty8LxsSF5WO8qk9ksS1"></div>
                <button type="submit" class="btn-submit">Submit Request</button>
            </form>
        </div>
    </div>
{% endblock %}