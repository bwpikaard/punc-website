{% extends "template.twig" %}

{% block title %}Login | Nano Cooperative{% endblock %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block body %}
    <div class="login">
        <div class="panel">
            <h2>Welcome</h2>
            <br>
            {% if error %}
                <div class="error">
                    <h6><i class="fas fa-times-circle"></i> {{ error }}</h6>
                </div>
            {% endif %}
            <form class="needs-validation" action="/auth/login" method="post" novalidate>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input name="username" type="text" class="form-control" id="username" {% if username %}value="{{ username }}"{% endif %} required>
                    <div class="invalid-feedback">
                        Please enter a username.
                    </div>
                </div>
                <div class="form-group mb-1">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" id="password" required>
                    <div class="invalid-feedback">
                        Please enter a password.
                    </div>
                </div>
                {#<small><a class="nanolink" href="/auth/reset">Forgot your password?</a></small>#}
                <button type="submit" class="btn-submit">Login</button>
            </form>
        </div>
    </div>
{% endblock %}